pipeline {
    agent any

    environment {
        DOCKER_COMPOSE = 'C:\\Program Files\\Docker\\Docker\\resources\\bin\\docker-compose.exe' // Path to Docker Compose on Windows
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: main
                url: 'https://github.com/shraiyap/interview1-scanbo.git'
            }
        }
        stage('Deploy via Docker Compose') {
            steps {
                bat "${env.DOCKER_COMPOSE} down"
                bat "${env.DOCKER_COMPOSE} up -d"
            }
        }
    }
}
